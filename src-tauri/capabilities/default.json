{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "twingate-notifier",
          "cmd": "twingate-notifier",
          "args": ["resources"]
        },
        {
          "name": "twingate-start",
          "cmd": "twingate",
          "args": ["start"]
        },
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "pkexec",
          "cmd": "pkexec",
          "args": ["twingate", "start"]
        }
      ]
    },
    "shell:default",
    "shell:allow-spawn",
    "shell:allow-stdin-write"
  ]
}

