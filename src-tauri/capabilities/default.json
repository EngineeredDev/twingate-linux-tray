{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window with granular Twingate CLI permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "twingate-status",
          "cmd": "twingate",
          "args": ["status"]
        },
        {
          "name": "twingate-start",
          "cmd": "twingate",
          "args": ["start"]
        },
        {
          "name": "twingate-stop",
          "cmd": "twingate",
          "args": ["stop"]
        },
        {
          "name": "twingate-auth",
          "cmd": "twingate",
          "args": ["auth", { "validator": "\\S+" }]
        },
        {
          "name": "twingate-notifier-resources",
          "cmd": "twingate-notifier",
          "args": ["resources"]
        },
        {
          "name": "xdg-open-url",
          "cmd": "xdg-open",
          "args": [{ "validator": "https?://[\\w.-]+(?:\\.[\\w.-]+)+[\\w\\-._~:/?#\\[\\]@!$&'()*+,;=%]+" }]
        }
      ]
    },
    "shell:default",
    "shell:allow-spawn",
    "shell:allow-stdin-write"
  ]
}
